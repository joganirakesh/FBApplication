@using Microsoft.AspNet.Facebook
@{
    ViewBag.Title = @ViewBag.AppTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var mainappimageurl = "/Images/AppImages/WishNavratri.gif";
}
<meta property="og:url" content="@Request.Url.ToString()" />
<meta property="og:type" content="website" />
<meta property="og:title" content="@ViewBag.AppTitle" />
<meta property="og:description" content="@ViewBag.AppDescription" />
<meta property="og:image" content="~/Images/background.png" />
<style>
  .app_data {
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    border-radius:10px;
    margin-right: 10px;
    padding-top: 10px;
    background-color: white !important;
}
  .blog_data {
    width: inherit !important;
    margin-right: 5px;
    margin-left: 5px;
    padding-left: 5px;
    padding-right: 5px;
    padding-top: 5px;
}
</style>

<div class="page-header">
    @*<h3 style="font-weight:600;">@ViewBag.AppTitle</h3>*@
    <h3 style="font-weight:600;">AppTitle</h3>
</div>

<div class="col-md-8 col-sm-12 col-xm-12 app_data">
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12 ">
            <img src="@mainappimageurl" class="img-thumbnail img-responsive center-block" />
            @*<img src="~/Images/background.png" class="img-thumbnail img-responsive center-block" />*@
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <p>@ViewBag.AppDescription</p>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="text-center">
                <a id="afacebookauthentication" href="javascript:" class="btn  btn-social1 btn-facebook1">
                    <span class="glyphicon glyphicon-thumbs-up  "></span> PLAY
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        @Html.Partial("_SocialSharing")
    </div>
</div>

<div class="col-md-3 col-sm-12 col-xm-12">
    @Html.Partial("_LatestApps")
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#afacebookauthentication").click(function () {

            var redirect_url = "@Request.Url.Scheme://@Request.Url.Authority/Home/FacebookAuth?AppName=@ViewBag.AppName";
            var appID = @GlobalFacebookConfiguration.Configuration.AppId;
            var scope = "public_profile%2Cuser_friends%2Cpublish_actions%2Cemail%2Cuser_education_history%2Cuser_location%2Cuser_hometown%2Cuser_work_history%2Cuser_about_me%2Cuser_actions.books%2Cuser_photos%2Cuser_birthday";
            window.location = "https://www.facebook.com/v2.5/dialog/oauth?client_id=" +appID +"&redirect_uri=" + redirect_url + "&scope="+scope;
        });
    });
</script>
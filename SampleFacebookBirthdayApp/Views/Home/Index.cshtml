@using Microsoft.AspNet.Facebook
@{
    ViewBag.Title = "A to Z Apps";
}
<style>
    .blog_data {
        background: #ffffff none repeat scroll 0 0;
        border: medium none;
        border-radius: 0.285714rem;
        box-shadow: 0 1px 3px 0 #d4d4d5, 0 0 0 1px #d4d4d5;
        display: flex;
        flex-direction: column;
        max-width: 100%;
        min-height: 0;
        padding: 0;
        position: relative;
        transition: box-shadow 0.1s ease 0s, transform 0.1s ease 0s;
        width: 100%;
        margin-bottom: 13px;
    }

    .img_data {
        display: inline-block;
        position: relative;
        width: 100%;
    }

        .img_data img {
            width: 100%;
        }

        .img_data:hover .hover_data {
            display: block;
        }

    .hover_data {
        background: rgba(0, 0, 0, 0.6) none repeat scroll 0 0;
        height: 100%;
        position: absolute;
        top: 0;
        width: 100%;
        display: none;
    }

        .hover_data span a {
            border: 1px solid #f2711c;
            color: #f2711c;
            display: inline-block;
            font-size: 16px;
            margin-top: 12%;
            margin-left: 40%;
            padding: 5px 20px;
            text-decoration: none;
        }

    .blog_contant {
        display: inline-block;
        padding: 6px 2px;
        width: 100%;
        margin-left: 5px;
        max-height: 77px;
    }
</style>
<div class="container ">
    
    <div class="page-header">
        <h3 style="text-align:center!important;">&nbsp;</h3>
        
    </div>
    <div class="row">
        @for (int i = 0; i < 13; i++)
        {
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="blog_data">
                    <div class="img_data">
                        <img src="~/Images/background.png" style="max-height:190px;" />
                        <div class="hover_data">
                            <span>
                                <a href="@Url.Action("Navratri2016", "Home")" >Play</a>
                            </span>
                        </div>
                    </div>
                    <div class="blog_contant text-center">
                        <a id="aNavratri2016" href="@Url.Action("Navratri2016", "Home")" ><h4>Title</h4></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
